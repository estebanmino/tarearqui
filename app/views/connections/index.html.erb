<p id="notice"><%= notice %></p>

<h1>Connections</h1>

<h2><%= request.remote_ip %></h2>
<h3>----------------------</h3>
<h2><%= request.env["HTTP_X_FORWARDED_FOR"] %></h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @connections.each do |connection| %>
      <tr>
        <td><%= connection.ip_address %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
